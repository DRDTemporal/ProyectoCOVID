<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/PrimeraPregunta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="0dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@android:color/holo_orange_dark"
                    android:padding="5dp"
                    android:text="@string/recomendacion"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgCaso41"
                    android:layout_width="match_parent"
                    android:layout_height="871dp"
                    android:layout_margin="4dp"/>

                <ImageView
                    android:id="@+id/imgCaso42"
                    android:layout_width="match_parent"
                    android:layout_height="825dp"
                    android:layout_margin="4dp"/>

                <ImageView
                    android:id="@+id/imgCaso43"
                    android:layout_width="match_parent"
                    android:layout_height="814dp"
                    android:layout_margin="4dp"/>


            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
